<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>

    </style>

    <style name="title_text">


        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">2dp</item>


        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="meeting_item_text">

        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="header_text">


        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>

        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="edit_box">


        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:maxHeight">140dp</item>
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:background">@drawable/edit_border</item>
    </style>

    <style name="edit_box_other">


        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">140dp</item>
        <item name="android:padding">15dp</item>

        <item name="android:textSize">@dimen/headline</item>
        <item name="android:background">@drawable/edit_border</item>
    </style>


    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spin_back</item>
        <item name="android:textColor">#212121</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/grey_back</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="button_style_actract">
        <item name="android:background">@drawable/buttonbg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:elevation">15dp</item>
    </style>


</resources>
