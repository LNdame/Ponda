                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:text="Owner" />

                <EditText
                    android:id="@+id/edtSubOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

        </LinearLayout>

            <ImageView
