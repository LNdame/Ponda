<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cite.ansteph.ponda.views.project.EditProject"
    tools:showIn="@layout/activity_edit_project">



                <LinearLayout

                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <TextView
                            style="@style/header_text"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Name" />

                        <EditText
                            android:id="@+id/edtname"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            style="@style/edit_box"

                            android:hint="Name"
                            android:ems="10"
                            android:inputType="textPersonName"
                            />

                        <TextView
                            style="@style/header_text"
                            android:id="@+id/tvclient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Client" />


                        <Spinner
                            android:id="@+id/edtcleintid"
                            android:layout_width="match_parent"
                            android:background="@drawable/spin_back"
                            android:layout_height="?android:listPreferredItemHeight"
                            android:layout_marginBottom="10dp"
                            />


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">



                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="?android:listPreferredItemHeight"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:text="2018-03-01"
                                    android:clickable="true"
                                    android:textSize="18sp"

                                    android:gravity="center"
                                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                                    android:drawableRight="@drawable/ic_arrow_down_black_24dp"
                                    android:paddingRight="16dp"
                                    android:id="@+id/start_date" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="?android:listPreferredItemHeight"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:textSize="18sp"
                                    android:text="2018-03-01"
                                    android:clickable="true"

                                    android:gravity="center"
                                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                                    android:drawableRight="@drawable/ic_arrow_down_black_24dp"
                                    android:paddingRight="16dp"
                                    android:id="@+id/end_date" />

                        </LinearLayout>


                    <TextView
                        style="@style/header_text"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Project Manager Name" />

                        <EditText
                            android:id="@+id/edtprojectmanname"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            style="@style/edit_box"

                            android:ems="10"
                            android:inputType="textPersonName"
                            />

                    <TextView
                        style="@style/header_text"
                        android:visibility="gone"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Status" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/edtstatus"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"

                            style="@style/edit_box"

                            android:ems="10"
                            android:inputType="text"
                            />




                </LinearLayout>



        </LinearLayout>

