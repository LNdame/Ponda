<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cite.ansteph.ponda.views.attendee.AttendeeList"
    tools:showIn="@layout/activity_edit_attendee">

        <TextView
            style="@style/header_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Name" />

        <EditText
            style="@style/edit_box"
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:ems="10"
            android:inputType="textPersonName"
            />

        <TextView
            style="@style/header_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Surname" />
        <EditText
            style="@style/edit_box"
            android:id="@+id/edtsurnname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:ems="10"
            android:inputType="textPersonName"
            />

        <TextView
            style="@style/header_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Organization Representing" />
        <EditText
            style="@style/edit_box"
            android:id="@+id/edtorganisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"

            android:inputType="text" />

        <TextView
            style="@style/header_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Telephone" />

        <EditText
            style="@style/edit_box"
            android:id="@+id/edttelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:ems="10"
            android:layout_marginBottom="16dp"
            android:inputType="numberSigned" />

        <TextView
            style="@style/header_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Cellphone" />
        <EditText
            style="@style/edit_box"
            android:id="@+id/edtcellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"

            android:inputType="numberSigned" />

        <TextView
            style="@style/header_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Fax" />
        <EditText
            style="@style/edit_box"
            android:id="@+id/edtfax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:ems="10"

            android:inputType="numberSigned" />

        <TextView
            style="@style/header_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Email" />
        <EditText
            style="@style/edit_box"
            android:id="@+id/edtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:ems="10"
            android:inputType="textEmailAddress"
            />

        />




</LinearLayout>