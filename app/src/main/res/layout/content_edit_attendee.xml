<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cite.ansteph.ponda.views.attendee.AttendeeList"
    tools:showIn="@layout/activity_edit_attendee">


        <EditText
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Name"
            android:ems="10"
            android:inputType="textPersonName"
            />
        <EditText
            android:id="@+id/edtsurnname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Surname"
            android:ems="10"
            android:inputType="textPersonName"
            />
        <EditText
            android:id="@+id/edtorganisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Representing"
            android:inputType="text" />

        <EditText
            android:id="@+id/edttelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Telephone"
            android:ems="10"
            android:layout_marginBottom="16dp"
            android:inputType="numberSigned" />


        <EditText
            android:id="@+id/edtcellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Cellphone"
            android:inputType="numberSigned" />


        <EditText
            android:id="@+id/edtfax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Fax"
            android:inputType="numberSigned" />


        <EditText
            android:id="@+id/edtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Email"
            android:ems="10"
            android:inputType="textEmailAddress"
            />

        />




</LinearLayout>